<div class='row mt-4 justify-space-around'>
    <div class='col-md-6'>
        <h1>Edit Your Post</h1>

        <form class='form edit-post' data-id='{{id}}'>
            <div class='form-group'>
                <label for='post-title'>Post-Title</label>
                <input class='form-input' type='text' value='{{title}}' id='post-title'>
            </div>
            <div class='form-group'>
                <label for='post-content'>Description</label>
                <input class='form-input' type='text' value='{{content}}' id='post-content'></input>
            </div>
            <div class='form-group'>
                <button type='submit' class='btn btn-primary'>Submit Post</button>
            </div>
        </form>

    </div>
</div>

<script src="/js/editpost.js"></script>